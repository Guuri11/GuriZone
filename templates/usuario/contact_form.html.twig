{{ form_start(contacto) }}
<div class="p-3 p-lg-5">
    <div class="form-group row">
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(contacto.nombre) }}</span><span class="text-danger"> *</span>
            {{ form_widget(contacto.nombre,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
        <span class="text-black text-uppercase">{{ form_label(contacto.email) }}</span><span class="text-danger"> *</span>
            {{ form_widget(contacto.email,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
        <span class="text-black text-uppercase">{{ form_label(contacto.asunto) }}</span><span class="text-danger"> *</span>
        {{ form_widget(contacto.asunto,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(contacto.mensaje) }}</span><span class="text-danger"> *</span>
            {{ form_widget(contacto.mensaje,{'attr':{'class':'form-control','cols':'30','rows':'7'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button class="btn btn-primary btn-lg btn-block">{{ button_label|default('ENVIAR') }}</button>
        </div>
    </div>
</div>
</div>
{{ form_end(contacto) }}
