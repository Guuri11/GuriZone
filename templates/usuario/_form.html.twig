{{ form_start(form) }}
<div class="p-3 p-lg-5">
    <div class="form-group row">
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.nombre) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.nombre,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.apellidos) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.apellidos,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.email) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.email,{'attr':{'class':'custom-select'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.password) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.password,{'attr':{'class':'custom-select'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.fotoPerfil) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.fotoPerfil,{'attr':{'class':'custom-select'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.rol,'Creado por') }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.rol,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <button class="btn btn-primary btn-lg btn-block">{{ button_label|default('CREAR') }}</button>
    </div>
</div>
{{ form_end(form) }}
