{{ form_start(form) }}
<div class="p-3 p-lg-5">
    <div class="form-group row">
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.modeloProd) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.modeloProd,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.marcaProd) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.marcaProd,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-md-12">
            <span class="text-black text-uppercase">{{ form_label(form.categoriaProd) }}</span><span class="text-danger"> *</span>
            {{ form_widget(form.categoriaProd,{'attr':{'class':'custom-select'}}) }}
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <button class="btn btn-primary btn-lg btn-block">{{ button_label|default('CREAR') }}</button>
    </div>
</div>
{{ form_end(form) }}
